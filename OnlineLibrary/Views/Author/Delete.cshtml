@model CreateAuthorViewModel

@{
    ViewData["Title"] = "Delete";
}

<form asp-action="Delete" method="post" class="mt-5 py-5 ms-5">
       <h2 class="my-4 text-danger">Delete @Model.Name Category</h2>
        <input type="hidden" asp-for="Id"/>
        <div class="form-group mb-3">
            <input class="form-control w-50" asp-for="Name" disabled />
        </div>
        <div class="text-left form-group">
           <button class="btn btn-danger btn-lg text-uppercase mt-3" type="submit">Delete</button>
        </div>
</form>



