  @page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class=" text-center text-lg-start bg ">
  <style>
    .rounded-t-5 {
      border-top-left-radius: 0.5rem;
      border-top-right-radius: 0.5rem;
    }

      .rounded-bl-lg-5 {
        border-bottom-left-radius: 0.5rem;
      }
    

  </style> 
     
  <div class="card mb-3 border-0 mx-5">
    <div class="row g-0 d-flex align-items-center">
      <div class="col-lg-4 d-none d-lg-flex ">
        <img src="~/BooksImages/login.jpg" alt="Trendy Pants and Shoes"
          class="w-100 h-75 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5 ms-5" />
      </div>
      <div class="col-lg-8">
  <div class="card-body py-5 px-md-5">      
 <form id="account" method="post">

  <h1 class="ms-4 my-5 text-center">@ViewData["Title"]</h1>
  <!-- Email input -->
  <div class="form-outline mb-4">
    <input  type="email"  asp-for="Input.Email" class="form-control w-50 m-auto" autocomplete="username" aria-required="true" placeholder="Email address" />
    <span asp-validation-for="Input.Email" class="text-danger"></span>
</div>

  <!-- Password input -->
  <div class="form-outline mb-4">
    <input asp-for="Input.Password" class="form-control  w-50 m-auto" autocomplete="current-password" aria-required="true"  placeholder="Password" />
    <span asp-validation-for="Input.Password" class="text-danger"></span>
  </div>

  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
      <div class="form-check">
        <label asp-for="Input.RememberMe" class="form-label">
           <input class="form-check-input" asp-for="Input.RememberMe" />
              @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
      </div>
    </div>

    <div class="col">
      <!-- Simple link -->
      <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
    </div>
  </div>

  <div class="text-center">
        <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-primary">Log in</button>

  </div>
  <!-- Submit button -->

  <!-- Register buttons -->
  <div class="text-center">
    <p>Not a member? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
</p>
    <p class="mt-3">or sign up with: </p>
    
        <a  class="btn btn-link btn-floating mx-1" href="https://www.facebook.com"><i class="bi bi-facebook"></i></a>
        <a  class="btn btn-link btn-floating mx-1" href="https://www.google.com"><i class="bi bi-google"></i></a>
        <a  class="btn btn-link btn-floating mx-1" href="https://www.twitter.com"><i class="bi bi-twitter"></i></a>
        <a  class="btn btn-link btn-floating mx-1" href="https://www.github.com"><i class="bi bi-github"></i></a>
  </div>
</form>

        </div>
      </div>
    </div>
  </div>
</section>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
